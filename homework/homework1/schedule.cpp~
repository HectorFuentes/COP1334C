//pre-processor directives
#include<iostream>
#include<iomanip>
using namespace std;

//define the main function
int main()
{
	//Display area
	
	cout<<"My Schedule\n\n"<<endl;
	
	cout<<"Monday:\n";
	cout<<"10:30am - 12:15pm\t"<<"Intro to C++\n";
	cout<<"12:30pm - 2:15pm\t"<<"Compositon\n";
	
	cout<<"Tuesday:\n";
	cout<<"9:30am - 11:00am\t"<<"College Algebra\n";
	cout<<"1:00pm - 2:30pm\t\t"<<"Biology\n";

	cout<<"Wednesday:\n";
	cout<<"10:30am - 12:15pm\t"<<"Intro to C++\n";
	cout<<"12:30pm - 2:15pm\t"<<"Compositon\n";

	cout<<"Thursday:\n";
	cout<<"9:30am - 11:00am\t"<<"College Algebra\n";
	cout<<"1:00pm - 2:30pm\t\t"<<"Biology\n";
	return 0;
}
